<% if flash[:alert] %>
  <p class="destroy"><%= alert %></p>
<% end %>

<h1>Books</h1>

<table>
 
<tr>
  
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>

</tr>

<tbody>

<% @books.each do |b| %>
<tr>
  <td><%= b.title %>  </td>
  <td><%= b.body %></td>
  <td><%= link_to "Show", book_path(b.id) %></td>
  <td><%= link_to "Edit", edit_book_path(b.id) %></td>
  <td><%= link_to "Destroy", destroy_book_path(b.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>

<% end %>

</tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved
  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




<%= form_with model: @book, url:'/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
	
  <p>Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>

